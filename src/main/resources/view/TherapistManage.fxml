                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#updateTherapist" prefHeight="27.0" prefWidth="153.0" style="-fx-background-color: #cfe2f3; -fx-text-fill: black; -fx-background-radius: 20px; -fx-border-color: black; -fx-border-radius: 20px;" text="Update">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deleteTherapist" prefHeight="27.0" prefWidth="153.0" style="-fx-background-color: #cfe2f3; -fx-text-fill: black; -fx-background-radius: 20px; -fx-border-color: black; -fx-border-radius: 20px;" text="Delete">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnReset" mnemonicParsing="false" onAction="#resetPage" prefHeight="27.0" prefWidth="153.0" style="-fx-background-color: #cfe2f3; -fx-text-fill: black; -fx-background-radius: 20px; -fx-border-color: black; -fx-border-radius: 20px;" text="Reset">
